{
  "manifest_version": 2,
  "name": "Pinboard-sync",
  "version": "1.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "pinboard-sync@artem.rocks"
    }
  },

  "description": "Manage your Pinboard bookmarks with native browser bookmark tools.",

  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/index.html",
    "browser_style": true,
    "chrome_style": true
  },
  "permissions": [
    "*://api.pinboard.in/*",
    "bookmarks",
    "storage"
  ]
}
